<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Let's Plan a Trip!</h3>

    <form class="form new-city-form">
      <div class="form-group">
        <label for="city-name">City Name:</label>
        <input class="form-input" type="text" id="city-name" name="city-name" />
      </div>
      <div class="form-group">
        <label for="city-funding">How much I need to save:</label>
        <input class="form-input" type="number" id="city-funding" name="city-funding" />
      </div>
      <div class="form-group">
        <label for="city-desc">My Adventure Plan:</label>
        <textarea class="form-input" id="city-desc" name="city-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if trips.length}}
  <div class="col-md-6 city-list">
    <h3>Recent Cities:</h3>

    {{#each trips as |trip|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/trip/{{trip.name}}">{{trip.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{trip.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div> 

<script src="./js/profile.js"></script>
